<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/beige">

    <TextView
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/piel"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icono"
        android:layout_gravity="center"
        />

    <TextView
        android:text="@string/reference"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/etReference"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ingrese la referencia"
        android:textAlignment="center"
        android:inputType="textPersonName"

        />

    <TextView
        android:text="@string/description"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="DescripciÃ³n"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/baseline_production_quantity_limits_24"
        />

    <TextView
        android:text="@string/price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Precio"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:inputType="textPersonName"
        />

    <TextView
        android:text="Tipo de Producto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <Spinner
        android:id="@+id/spRefType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#ECDFCC"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <ImageButton
        android:id="@+id/ibSave"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_save_24"
        android:contentDescription="Descripction"
        android:minHeight="48dp"
        />

        <ImageButton
        android:id="@+id/ibSearch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_search_24"
            android:contentDescription="Descripction"
            android:minHeight="48dp"
        />

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24"
            android:contentDescription="Descripction"
            android:minHeight="48dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/ibDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:contentDescription="Descripction"
            android:minHeight="48dp"
            />

        <ImageButton
            android:id="@+id/ibList"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_preview_24"
            android:contentDescription="Descripction"
            android:minHeight="48dp"
            />


    </LinearLayout>
</LinearLayout>